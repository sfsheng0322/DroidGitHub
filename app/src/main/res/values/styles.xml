<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="singleLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textView.singleLine.titlebar_title" parent="singleLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style
        name="textView.singleLine.titlebar_title.left" parent="textView.singleLine.titlebar_title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxWidth">190dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style
        name="textView.singleLine.titlebar_title.right" parent="textView.singleLine.titlebar_title">
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxWidth">190dp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="titlebar_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
