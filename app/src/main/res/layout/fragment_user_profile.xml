<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_profile_height">

        <com.sunfusheng.GlideImageView
            android:id="@+id/profile_avatar_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_height"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_blur_default"/>

        <com.sunfusheng.GlideImageView
            android:id="@+id/avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/item_margin_large"
            android:layout_marginRight="@dimen/item_margin_large"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatar"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_toRightOf="@+id/avatar"
            android:text="个人信息"
            android:textColor="@color/transparent60_white"
            android:textSize="@dimen/text_size_x_small"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_list_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_smaller"
            android:paddingTop="@dimen/item_margin_smaller">

            <TextView
                android:id="@+id/repo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repositories"
                android:textColor="@color/font1"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/repo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font2"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_list_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_smaller"
            android:paddingTop="@dimen/item_margin_smaller">

            <TextView
                android:id="@+id/followers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:textColor="@color/font1"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/followers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font2"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_list_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_smaller"
            android:paddingTop="@dimen/item_margin_smaller">

            <TextView
                android:id="@+id/following_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textColor="@color/font1"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="0"
                android:textColor="@color/font2"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider_1px_16dp"/>
</LinearLayout>