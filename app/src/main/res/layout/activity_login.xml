<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/item_margin_large">

    <com.sunfusheng.github.widget.SvgView
        android:id="@+id/svg_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:svgFillColors="@array/google_four_colors"
        app:svgFillStart="1500"
        app:svgFillTime="1500"
        app:svgGlyphStrings="@array/google_svg_strings"
        app:svgImageSizeX="400"
        app:svgImageSizeY="400"
        app:svgTraceTime="3000"
        app:svgTraceTimePerGlyph="1500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-22dp"
                android:layout_marginLeft="@dimen/item_margin_smallest"
                android:text="@string/username"
                android:textColor="@color/font1"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_tip"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:background="@null"
                android:drawableBottom="@drawable/drawable_edittext_bottom_line_selector"
                android:drawablePadding="@dimen/item_margin_large"
                android:hint="@string/username_input"
                android:paddingLeft="80dp"
                android:text=""
                android:textColor="@color/font1"
                android:textColorHint="@color/font3"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/password_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-22dp"
                android:layout_marginLeft="@dimen/item_margin_smallest"
                android:text="@string/password"
                android:textColor="@color/font1"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_tip"
                android:imeOptions="actionDone"
                android:background="@null"
                android:maxLines="1"
                android:drawableBottom="@drawable/drawable_edittext_bottom_line_selector"
                android:drawablePadding="@dimen/item_margin_large"
                android:hint="@string/password_input"
                android:inputType="textPassword"
                android:paddingLeft="80dp"
                android:text=""
                android:textColor="@color/font1"
                android:textColorHint="@color/font3"
                android:textSize="17sp"/>
        </RelativeLayout>

        <com.sunfusheng.github.widget.RadiusWidget.RadiusTextView
            android:id="@+id/login"
            style="@style/RadiusButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:text="@string/login"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>
