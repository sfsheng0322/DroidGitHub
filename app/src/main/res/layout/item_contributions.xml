<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_large"
        android:layout_marginTop="@dimen/item_margin_smaller"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/text_size_normal"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="contributions in the last year"
            android:textColor="@color/font1"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>

    <com.sunfusheng.github.widget.ContributionsView
        android:id="@+id/contributions"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/item_margin_smaller"/>

</LinearLayout>
