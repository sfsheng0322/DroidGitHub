<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_list_item_selector"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/item_margin_large"
            android:layout_marginRight="@dimen/item_margin_large"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/font1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="个人信息"
                android:textColor="@color/font2"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_margin_large"
            android:visibility="gone"/>
    </RelativeLayout>

    <include layout="@layout/divider_1px_16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/repo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_list_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_smaller"
            android:paddingTop="@dimen/item_margin_smaller">

            <TextView
                android:id="@+id/repo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓库"
                android:textColor="@color/font1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/repo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="@color/font2"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_list_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_smaller"
            android:paddingTop="@dimen/item_margin_smaller">

            <TextView
                android:id="@+id/following_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/font1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/following_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="@color/font2"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_list_item_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_smaller"
            android:paddingTop="@dimen/item_margin_smaller">

            <TextView
                android:id="@+id/followers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:textColor="@color/font1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/followers_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="@color/font2"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>