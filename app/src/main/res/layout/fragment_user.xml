<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sunfusheng.github.widget.ListenerNestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/item_user_profile"/>

            <include
                layout="@layout/divider_20dp"/>

            <com.sunfusheng.github.widget.ContributionsView
                android:id="@+id/contributions"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <include
                layout="@layout/divider_20dp"/>

            <LinearLayout
                android:id="@+id/repo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <include
                layout="@layout/divider_20dp"/>

            <LinearLayout
                android:id="@+id/event_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>
    </com.sunfusheng.github.widget.ListenerNestedScrollView>

    <include layout="@layout/fragment_user_toolbar"/>
</FrameLayout>