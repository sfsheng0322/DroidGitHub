<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.sunfusheng.glideimageview.GlideImageView
        android:id="@+id/toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_head_height"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_blur_default"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/statusbar_view_height"
        android:background="@color/transparent"
        app:contentInsetStart="0.0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="enterAlways|scroll"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitleTextAppearance="@style/Toolbar.SubTitle"
        app:theme="@style/ToolbarStyle"
        app:titleTextAppearance="@style/ToolBar.Title"/>
</RelativeLayout>