<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sunfusheng.github.widget.ScrollableLayout.ScrollableLayout
        android:id="@+id/scrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sunfusheng.github.widget.app.UserProfileView
                android:id="@+id/user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include layout="@layout/divider_16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_common"
                android:includeFontPadding="false"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/item_margin_large"
                android:paddingTop="@dimen/item_margin"
                android:text="Contributions"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"/>

            <com.sunfusheng.github.widget.app.ContributionsView
                android:id="@+id/contributions"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <include layout="@layout/divider_16dp"/>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/background_common"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabPaddingStart="@dimen/item_margin_large"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/colorAccent_50"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.sunfusheng.github.widget.ScrollableLayout.ScrollableLayout>

    <include layout="@layout/fragment_user_toolbar"/>
</FrameLayout>